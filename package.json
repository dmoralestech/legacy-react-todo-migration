{
  "name": "legacy-todo-app",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@tanstack/react-query": "^4.36.1",
    "@tanstack/react-query-devtools": "^4.36.1",
    "@testing-library/dom": "^10.4.0",
    "jotai": "^1.13.1",
    "jotai-tanstack-query": "^0.9.2",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "uuid": "^7.0.3"
  },
  "scripts": {
    "start": "NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "start:jotai": "REACT_APP_USE_JOTAI=true NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "start:modern": "REACT_APP_USE_JOTAI=true REACT_APP_USE_TANSTACK_QUERY=true NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "start:components": "REACT_APP_USE_MODERN_TODO_ITEM=true REACT_APP_USE_MODERN_TODO_FORM=true REACT_APP_USE_MODERN_TODO_LIST=true REACT_APP_USE_MODERN_TODO_FILTERS=true NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "build": "NODE_OPTIONS=--openssl-legacy-provider react-scripts build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:basic": "playwright test src/test/e2e/basic-functionality.spec.js",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:basic:chromium": "playwright test src/test/e2e/basic-functionality.spec.js --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "react-scripts": "3.4.1",
    "redux-mock-store": "^1.5.5",
    "redux-saga-test-plan": "^4.0.6",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
